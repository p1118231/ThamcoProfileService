@model ThamcoProfiles.Models.User

@{
    ViewData["Title"] = "Details";
    ViewData["ControllerName"] = "Account";
    ViewData["ActionName"] = "Details";
}



<!-- Link to External CSS File -->
<link href="~/css/details.css" rel="stylesheet" />

<body>
    
<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- Left Column: User Information -->
        

        <!-- Right Column: User Details Table -->
        <div class="card-col col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h4 class="mb-0">@Model.Email</h4>
                </div>
                <div class="card-body">
                    <div class="user-info-list">
                        <div class="user-info-item">
                            <strong>First Name:</strong> <span>@Model.FirstName</span>
                            <a asp-action="EditField" asp-route-field="FirstName" class="btn btn-outline-primary btn-sm float-end">Edit</a>
                        </div>
                        <div class="user-info-item">
                            <strong>Last Name:</strong> <span>@Model.LastName</span>
                            <a asp-action="EditField" asp-route-field="LastName" class="btn btn-outline-primary btn-sm float-end">Edit</a>
                        </div>
                        <div class="user-info-item">
                            <strong>Phone Number:</strong> <span>@Model.PhoneNumber</span>
                            <a asp-action="EditField" asp-route-field="PhoneNumber" class="btn btn-outline-primary btn-sm float-end">Edit</a>
                        </div>
                        <div class="user-info-item">
                            <strong>Payment Address:</strong> <span>@Model.PaymentAddress</span>
                            <a asp-action="EditField" asp-route-field="PaymentAddress" class="btn btn-outline-primary btn-sm float-end">Edit</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Buttons Section -->
            <div class="d-flex justify-content-between">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">Back to Home</a>
                <a asp-controller="Account" asp-action="Delete" class="btn btn-danger btn-lg">Delete Account</a>
                
            </div>
        </div>
    </div>
</div>
</body>
